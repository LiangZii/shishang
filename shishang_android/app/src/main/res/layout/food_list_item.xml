<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <com.liang.dietitian.customView.RoundImageView
        android:id="@+id/food_list_img"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="2"
        android:layout_marginBottom="20dp"
        android:scaleType="center"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/food_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_200"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/food_list_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_400"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/food_list_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/score_deep"
            android:background="@drawable/score_block"
            android:layout_marginTop="14dp"
            android:textSize="13sp" />

    </LinearLayout>





</LinearLayout>